{{!< default}}

<div id="encabezado-mobile">
  <h1 style="    position: fixed;
    top: 0;
    width: 100%;
    background: black;
    margin: 0;
    padding: 0;
    color: white;
    left: 0px;" class="blog-title"  id="posts-headline"><a href="http://miguelnieva.com" style="color: white;">Miguel Nieva</a></h1>
  <h2 style=" padding: 23px 0 10px;" class="blog-description">Sé tu mejor versión profesional.</h2>
  {{> encabezado-social}}

<ul class="navegacion" style="">
    <a href="http://miguelnieva.com/">
      <li>Artículos</li>
    </a>
  <a href="http://miguelnieva.com/agenda/">
    <li>Agenda</li>
    </a>
  <a href="http://miguelnieva.com/cursos/">
    <li>Cursos</li>
  </a>
</ul>
</div>

<h1 style="text-align: center;">{{tag.name}}</h1>
<ol id="posts-list">
  {{#foreach posts}}
  <li>
    <time datetime="{{date format="DD MMM YYYY"}}">{{date format="DD MMM YYYY"}}</time>
    <a href="{{url}}" title="link to {{{title}}}">{{title}}</a>
    <span class="post tags">{{tags separator=" "}}</span>
  </li>
  {{/foreach}}
</ol>

{{pagination}}
