    <div class="indicates-required"><span class="asterisk"></span>
    </div>
    <div class="mc-field-group">    
      <input type="email" value="" placeholder="Tu email" name="EMAIL" class="required email valid" id="mce-EMAIL" aria-required="true" aria-invalid="false">
      <div for="mce-EMAIL" class="mce_inline_error" style="display: none;">Por favor, escribe una dirección de correo válida</div>
    </div>
    <div class="mc-field-group">    
      <input type="text" value="" placeholder="Tu nombre" name="FNAME" class="required valid" id="mce-FNAME" aria-required="true" aria-invalid="false">
      <div for="mce-FNAME" class="mce_inline_error" style="display: none;">Este campo es obligatorio.</div>
    </div>  
    <div id="mce-responses" class="clear">    
      <div class="response" id="mce-error-response" style="display:none"></div>    
      <div class="response" id="mce-success-response" style="display:none"></div>  
    </div>
    <div style="position: absolute; left: -5000px;">
      <input type="text" name="b_ed01cbcbb32aa86f232eb4854_ea3a2d33d1" tabindex="-1" value=""></div>
      <div class="clear" style="
      display: inline-block;
      vertical-align: top;">
        <input type="submit" value="Suscribirme" name="subscribe" id="mc-embedded-subscribe" class="button">
      </div>
  </form>
</div>

<ol id="posts-list">	
  {{#foreach posts}}
  <li>
    <div class="post-tag">
      <div class="post-image">
        <a href="{{url}}">
          <img src="{{image absolute="true"}}">
        </a>
      </div>
      <article class="post">
        <a href="{{url}}">
          <header class="post-header">
            <h2 class="post-title">{{{title}}}</h2>
          </header>
        </a>
        <span class="etiquetas">{{tags}}</span>
      </article>
    </div>
  </li>
  {{/foreach}}
</ol>
{{pagination}}
