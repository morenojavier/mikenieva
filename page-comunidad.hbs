{{!< default}}

{{! Información sobre Post para el loop }}
      

<div id="encabezado-mobile">
  <h1 style="    position: fixed;
    top: 0;
    width: 100%;
    background: black;
    margin: 0;
    padding: 0;
    color: white;
    left: 0px;" class="blog-title"  id="posts-headline"><a href="http://miguelnieva.com" style="color: white;">Miguel Nieva</a></h1>
  <h2 style=" padding: 23px 0 10px;" class="blog-description">Sé tu mejor versión profesional.</h2>
{{> encabezado-social}}
{{> encabezado-navegacion}}
</div>
{{#post}}

      {{#contentFor "meta"}}
            <meta property="og:title" content="{{title}} - Miguel Nieva" />
            <meta property="og:site_name" content="Comunidad de Profesionales" />
            <meta property="og:description" content="La mejor compilación de consejos profesionales, cada semana."/>
            <meta property="og:image" content="{{@blog.url}}{{image}}">
            <meta property="article:author" content="https://facebook.com/mike.nieva" />
            <meta property="article:published_time" content="{{date format="YYYY-MM-DD"}}" />{{#foreach tags}}
            <meta property="article:tag" content="{{name}}" />{{/foreach}}
            <meta property="fb:profile_id" content="mikenieva" />
            <meta property="fb:admins" content="mikenieva" />
        {{/contentFor}}

  <article class="{{post_class}}">
    <header>
        <h1 id="post-title">{{{title}}}</h1>
    </header>
    <div id="post-content" class="{{post_class}}">
      {{content}}
    </div>
    
  </article>
{{/post}}
